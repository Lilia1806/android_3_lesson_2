<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/name_location_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="name: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_location_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/name_location_title" />

    <TextView
        android:id="@+id/type_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="type: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_location_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_location_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="type"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/type_title"
        app:layout_constraintTop_toTopOf="@+id/type_title" />

    <TextView
        android:id="@+id/dimension_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="dimension: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_location_dimension"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="dimension"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/dimension_title"
        app:layout_constraintTop_toTopOf="@+id/dimension_title" />

    <TextView
        android:id="@+id/url_location_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="url: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dimension_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_location_url"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="url"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/url_location_title"
        app:layout_constraintTop_toTopOf="@+id/url_location_title" />

</androidx.constraintlayout.widget.ConstraintLayout>