<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/created_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="created: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_episodes_created"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="episode"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/created_title" />

    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="name: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_episodes_created"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_episodes_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/name_title"
        app:layout_constraintTop_toTopOf="@+id/name_title" />

    <TextView
        android:id="@+id/air_date_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="air_date: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_episodes_air_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="air_date"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/air_date_title"
        app:layout_constraintTop_toTopOf="@+id/air_date_title" />

    <TextView
        android:id="@+id/url_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="url: "
        android:textColor="@color/light_light_grey"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/air_date_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_episodes_air_url"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="url"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/url_title"
        app:layout_constraintTop_toTopOf="@+id/url_title" />

</androidx.constraintlayout.widget.ConstraintLayout>